<script>
let keysValidas = [
  { key: "444" },
  { key: "NINJA" },
];

function logar(){
  const key = document.getElementById('keyInput').value.trim().toUpperCase();
  const encontrado = keysValidas.find(k => k.key === key);
  if(encontrado){
    document.getElementById('loginScreen').style.display='none';
    document.getElementById('painelScreen').style.display='block';
    playClick();
  } else {
    alert('Login inv√°lido');
  }
}

function tocarSom() {
    var audio = new Audio('https://cdn.pixabay.com/download/audio/2022/03/15/audio_c0f1a1c389.mp3?filename=button-124476.mp3');
    audio.play();
}

function abrirFF() {
    tocarSom();
    window.location.href = 'intent://com.dts.freefireth#Intent;scheme=android-app;end';
}

function abrirFFMax() {
    tocarSom();
    window.location.href = 'intent://com.dts.freefiremax#Intent;scheme=android-app;end';
}

function toggle(el){ el.classList.toggle('active'); playClick(); }
function playClick(){ const sound=document.getElementById('clickSound'); sound.currentTime=0; sound.play(); }

function animateSlider(sliderId,valueId){
  const slider=document.getElementById(sliderId);
  const value=document.getElementById(valueId);
  const target=parseInt(slider.value);
  let current=parseInt(value.textContent);
  clearInterval(value.timer);
  value.timer=setInterval(()=>{
    if(current<target) current++;
    else if(current>target) current--;
    else clearInterval(value.timer);
    value.textContent=current;
  },5);
}

// ‚úÖ AQUI EST√Å A CORRE√á√ÉO DO MENU ALVO ‚úÖ
(function(){
  const button=document.getElementById('aimButton');
  const list=document.getElementById('aimList');
  const label=document.getElementById('aimLabel');

  function toggleList(e){
    if(e) e.stopPropagation();
    const open=list.classList.toggle('open');
    button.setAttribute('aria-expanded',open?'true':'false');
    list.setAttribute('aria-hidden',open?'false':'true');
    playClick();
  }

  function chooseItem(val){
    label.textContent=val;
    list.classList.remove('open');
    button.setAttribute('aria-expanded','false');
    list.setAttribute('aria-hidden','true');
    playClick();
  }

  button.addEventListener('click', toggleList);
  button.addEventListener('keydown',(ev)=>{
    if(ev.key==='Enter' || ev.key===' '){
      ev.preventDefault();
      toggleList(ev);
    }
  });

  list.addEventListener('click',(ev)=>{
    const li=ev.target.closest('li');
    if(!li) return;
    ev.stopPropagation();
    chooseItem(li.getAttribute('data-value') || li.textContent.trim());
  });

  document.addEventListener('click',()=>{
    if(list.classList.contains('open')){
      list.classList.remove('open');
      button.setAttribute('aria-expanded','false');
      list.setAttribute('aria-hidden','true');
    }
  });

  document.addEventListener('keydown',(ev)=>{
    if(ev.key==='Escape' && list.classList.contains('open')){
      list.classList.remove('open');
      button.setAttribute('aria-expanded','false');
      list.setAttribute('aria-hidden','true');
    }
  });
})();
/////////////////////////////////////

document.getElementById('activateBtn').addEventListener('click', () => {
  playClick();
  const utter = new SpeechSynthesisUtterance("Aux√≠lio exe ativado");
  utter.lang = "pt-BR";
  utter.rate = 1.0;
  speechSynthesis.speak(utter);

  utter.onend = () => {
    document.getElementById("openAppMaxBtn").classList.remove("hide");
    document.getElementById("openAppNormalBtn").classList.remove("hide");
    document.getElementById("activateBtn").classList.add("hide");
  };
});
</script>

